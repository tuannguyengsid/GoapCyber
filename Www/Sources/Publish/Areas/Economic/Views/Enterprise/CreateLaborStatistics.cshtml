@using GSID.WebApp.Areas.Economic.ViewModels
@using GSID.WebApp.Helpers;
@model CreateLaborStatisticViewModel
 <!-- Begin Alert Modal -->
<div class="modal fade" id="CreateLaborStatisticsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateLaborStatistics", "Enterprise", FormMethod.Post, new { @class = "form-horizontal createLaborStatistics", enctype = "multipart/form-data" }))
            { 
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h2 class="modal-title">Thêm thông tin lao động</h2>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            @Html.HiddenFor(m => m.EnterpriseId)
                            <div class="form-group">
                                @Html.LabelFor(m => m.TotalEmployees, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(model => model.TotalEmployees, new { @class = "form-control", @placeholder = "Nhập số lượng lao động" })
                                    @Html.ValidationMessageFor(model => model.TotalEmployees)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Year, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    @Html.DropDownListFor(model => model.Year, Model.Years, "---Chọn---", new { @class = "form-control select2 select-placeholder" })
                                    @Html.ValidationMessageFor(model => model.Year)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-primary btn" id="btnsave" type="submit">Lưu</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="ion-android-cancel"></i> Hủy bỏ</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.End Alert Modal  -->

<script type='text/javascript' src='@Url.Content("~/Scripts/jquery.validate.js")'></script>
<script type='text/javascript' src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")'></script>

<script type="text/javascript">
    $(document).ready(function () {
        initCreateModal();
    });

    function initCreateModal() {
        $('#CreateLaborStatisticsModal').modal();
    }

    function initCreateLaborStatistic() {
        $('#bodymask').show();
        $.ajax({
            url: '@Url.Action("GetListLaborStatistics", "Enterprise")',
            type: 'GET',
            data: {
                enterpriseId: '@Model.EnterpriseId'
            },
            dataType: 'html',
            success: function (result) {
                $('#laborstatisticsContent').html(result);
                $('#bodymask').hide();
            },
            error: function () {
                $('#bodymask').hide();
                alert('Error!');
            }
        });
    }

    $(function () {
        $('form.createLaborStatistics').ajaxForm({
            beforeSubmit: function (arr, form, options) {
                var validator = form.validate(); // obtain validator
                var anyError = false;
                try {
                    form.find("input,select").each(function () {
                        if (!validator.element(this)) { // validate every input element inside this step
                            anyError = true;
                        }
                    });
                } catch (e) {
                }
                if (anyError) {
                    return false; // exit if any error found
                }
            },
            success: function (data, statusText) {
