<script type="text/javascript">
    function onDuplicate(val) {
        if (val.length > 0) {
            swal({
                title: "Đang xử lý dữ liệu",
                html: true,
                showConfirmButton: false
            });
            $.ajax({
                url: '@Url.Action("Duplicate", Request.RequestContext.RouteData.Values["controller"].ToString())',
                type: 'POST',
                data: { id: val},
                dataType: 'json',
                success: function (result) {
                    if (result.Status == '2') {
                        swal({
                            title: "Thông báo",
                            text: "Đã hoàn thành tạo bản sao tin tức",
                            type: "success",
                            confirmButtonText: "Đến chi tiết"
                        },
                            function (isConfirm) {
                                if (isConfirm) {
                                    window.location.href = '@Url.Action("Update", Request.RequestContext.RouteData.Values["controller"].ToString())?gsid=' + result.Id;
                                } else {
                                    swal.close();
                                }
                            });

                    }
                    else {
                        swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                    }
                },
                error: function () {
                    swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                }
            });
        }
    }

    $(function () {
        menuActive('@ViewBag.ActiveMenu');

        $("#NameVn").keyup(function () {
            $('#FullSlugVn').val('/vn/tin-tuc/' + $('#NewsCategorySlugVn').val() + '/' + convertToSlug(removeDiacritics($(this).val().trim())));
            $('#SlugVn').val(convertToSlug(removeDiacritics($(this).val().trim())));
        });
        $("#NameEn").keyup(function () {
            $('#FullSlugEn').val('/en/news/' + $('#NewsCategorySlugEn').val() + '/' + convertToSlug(removeDiacritics($(this).val().trim())));
            $('#SlugEn').val(convertToSlug(removeDiacritics($(this).val().trim())));
        });

        $('#NewsCategoryId').change(function () {
            var select = $(this).val();
            if (select.length > 0) {
                $.ajax({
                    url: '@Url.Action("GetCategory", Request.RequestContext.RouteData.Values["controller"].ToString())',
                    type: 'POST',
                    data: { CateId: select },
                    dataType: 'json',
                    success: function (result) {
                        if (result.Status == '2') {
                            $('#NewsCategorySlugVn').val(result.SlugVn);
                            $('#NewsCategorySlugEn').val(result.SlugEn);
                            $('#FullSlugVn').val('/vn/tin-tuc/' + result.SlugVn + '/' + $('#SlugVn').val());
                            $('#FullSlugEn').val('/en/news/' + result.SlugEn + '/' + $('#SlugEn').val());
                        }
                    },
                    error: function () {
                        console.log("Lỗi", "Hệ thống gặp vấn đề");
                    }
                });
            }
        });

        $('form.FormMain').ajaxForm({
            delegation: true,
            beforeSerialize: function (form, opts) {
            },
            beforeSubmit: function (arr, form, options) {
                var validator = form.validate(); // obtain validator
                var anyError = false;
                try {
                    form.find("input,select").each(function () {
                        if (!validator.element(this)) { // validate every input element inside this step
                            anyError = true;
                        }
                    });
                } catch (e) {
                }

                $('.tab-container .nav-tabs > li').each(function (index, value) {
                    var $tab = $(this);
                    var elName = $tab.find('a').attr('href');
                    var _hasValid = $(elName).find('.input-validation-error');
                    if (_hasValid.length > 0)
                        $tab.addClass('input-validation-error');
                    else
                        $tab.removeClass('input-validation-error');
                });
                if (anyError) {
                    return false; // exit if any error found
                }

                swal({
                    title: "Đang xử lý dữ liệu",
                    html: true,
                    showConfirmButton: false
                });
            },  // pre-submit callback
            success: function (data, statusText) {
                var idmodal = '#myModal';
                $(idmodal + ' .modal-header .modal-title').text(data.Title);
                $(idmodal + ' .modal-body p').text(data.Message);
                if (data.Status == '2') {
                    $(idmodal + ' .modal-footer .btn-alert-submit').show();
                    $("#hdfid").val(data.Id);
                    $.validator.unobtrusive.parse("form");
                }
                $(idmodal).modal();
                swal.close();
            },  // post-submit callback
            error: function (xhr, textStatus, errorThrown) {
                alert('Hệ thống gặp vấn đề. Xin vui lòng kiểm tra lại mạng Internet');
                console.log("in ajaxForm error");
                swal.close();
            },
            complete: function (xhr) {
                console.log("in ajaxForm complete");
                swal.close();
                //status.html(xhr.responseText);
            }
        });
    });
</script>