    function onUpdateBanner(val) {
        swal({
            title: "Đang xử lý dữ liệu",
            html: true,
            showConfirmButton: false
        });
        $.ajax({
            method: 'GET',
            url: '@Url.Action("PartialUpdateBanner", "HomePage", new { Area = "PageManagement"})',
            data: { gsid : val},
            dataType: 'html',
            success: function (data, status) {
                swal.close();
                $('#binding-modal').html(data);
            },
            error: function (error) {
                console.log('Error in sending ajax data');
            }
        });
    }

    function onDeleteBanner(val) {
        if (val.length > 0) {
            swal({
                title: 'Bạn đã chắc chứ?',
                text: "Bạn có chắc muốn xóa dữ liệu này không",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Xóa",
                cancelButtonText: "Đóng",
                closeOnConfirm: false,
                closeOnCancel: false
            },function (isConfirm) {
                if (isConfirm) {
                    swal({
                        title: "Đang xử lý dữ liệu",
                        html: true,
                        showConfirmButton: false
                    });
                    $.ajax({
                        url: '@Url.Action("DeleteBanner", "HomePage", new { Area = "PageManagement"})',
                        type: 'POST',
                        data: { id: val },
                        dataType: 'json',
                        success: function (result) {
                            swal.close();
                            if (result.Status == '2') {
                                onLoadBanner();
                            }
                            else {
                                swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                            }
                        },
                        error: function () {
                            swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                        }
                    });
                }
                else {
                    swal.close();
                }
            });
        }
    }

