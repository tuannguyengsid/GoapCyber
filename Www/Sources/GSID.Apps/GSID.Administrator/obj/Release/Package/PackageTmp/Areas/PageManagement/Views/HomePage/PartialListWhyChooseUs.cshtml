@using MvcSiteMapProvider.Web.Html;
@using GSID.Model.MongodbModels;
@using GSID.Admin.Helpers;
@using GSID.Admin.Areas.PageManagement.ViewModels;
@using GSID.Model.ExtraEntities;
@model HomePageViewModel
@{
    var SiteInformation = GSID.Admin.Controllers.BaseController.GSIDSessionSiteInformation;
    string httpStatic = SiteInformation != null ? SiteInformation.UrlAddressSiteMultimedia : "";
}

@if (Model.WhyChooseUss != null)
{
    <ul class="ul-img">
        @foreach (var item in Model.WhyChooseUss)
        {
            <li class="li-24">
                <div class="img-wrap">
                    <div class="img-cover">
                        <h4>@item.NameVn</h4>
                        <p>@item.DescriptionVn</p>
                    </div>
                    <div class="img-action">
                        <a href="javascript:;" class"btn btn-default btn-xs" onclick="onUpdateWhyChose('@item.Id.ToString()')"><i class="ion-android-create"></i></a>
                        <a href="javascript:;" class"btn btn-danger btn-xs" onclick="onDeleteWhyChose('@item.Id.ToString()')"><i class="ion-android-close"></i></a>
                    </div>
                </div>
            </li>
        }
    </ul>
}