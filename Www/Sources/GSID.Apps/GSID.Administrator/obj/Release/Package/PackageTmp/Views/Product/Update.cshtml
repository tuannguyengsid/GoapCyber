    function onUpdateOverview(blockid) {
        if (blockid.length > 0) {
            swal({
                title: "Đang xử lý dữ liệu",
                html: true,
                showConfirmButton: false
            });
            $.ajax({
                method: 'GET',
                url: '@Url.Action("PartialUpdate", "ProductOverviewBlock", new { Area = ""})',
                data: { gsid: blockid },
                dataType: 'html',
                success: function (data, status) {
                    swal.close();
                    $('#binding-modal').html(data);
                },
                error: function (error) {
                    console.log('Error in sending ajax data');
                }
            });
        }
    }

    function onDeleteBlock(val, lang) {
        if (val.length > 0) {
            swal({
                title: 'Bạn đã chắc chứ?',
                text: "Bạn có chắc muốn xóa dữ liệu này không",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Xóa",
                cancelButtonText: "Đóng",
                closeOnConfirm: false,
                closeOnCancel: false
            },function (isConfirm) {
                if (isConfirm) {
                    swal({
                        title: "Đang xử lý dữ liệu",
                        html: true,
                        showConfirmButton: false
                    });
                    $.ajax({
                        url: '@Url.Action("Delete", "ProductOverviewBlock", new { Area = "" })',
                        type: 'POST',
                        data: { id: val },
                        dataType: 'json',
                        success: function (result) {
                            swal.close();
                            if (result.Status == '2') {
                                if (lang == '1')
                                    onLoadOverviewVn();
                                else if (lang == '2')
                                    onLoadOverviewEn();
                            }
                            else {
                                swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                            }
                        },
                        error: function () {
                            swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                        }
                    });
                }
                else {
                    swal.close();
                }
            });
        }
    }

    function onInitData() {

        $("#ul-perspectiveImg").sortable({
            change: function (event, ui) {
                $('#ImageChangeSort').val('2');
            }
        }).disableSelection();

        initOverviewViewTypeVn();
        $('#OverviewViewTypeVn').change(function () {
            initOverviewViewTypeVn();
        });

        initOverviewViewTypeEn();
        $('#OverviewViewTypeEn').change(function () {
            initOverviewViewTypeEn();
        });
    }
    function onDuplicate(val) {
        if (val.length > 0) {
            swal({
                title: "Đang xử lý dữ liệu",
                html: true,
                showConfirmButton: false
            });
            $.ajax({
                url: '@Url.Action("Duplicate", Request.RequestContext.RouteData.Values["controller"].ToString())',
                type: 'POST',
                data: { id: val},
                dataType: 'json',
                success: function (result) {
                    if (result.Status == '2') {
                        swal({
                            title: "Thông báo",
                            text: "Đã hoàn thành tạo bản sao sản phẩm",
                            type: "success",
                            confirmButtonText: "Đến chi tiết"
                        },
                            function (isConfirm) {
                                if (isConfirm) {
                                    window.location.href = '@Url.Action("Update", Request.RequestContext.RouteData.Values["controller"].ToString())?gsid=' + result.Id;
                                } else {
                                    swal.close();
                                }
                            });

                    }
                    else {
                        swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                    }
                },
                error: function () {
                    swal("Lỗi", "Hệ thống gặp vấn đề", "error");
                }
            });
        }
    }

    function onDelete(obj) {
        swal({
            title: 'Bạn đã chắc chứ?',
            text: "Bạn có chắc muốn xóa dữ liệu này không",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Xóa",
            cancelButtonText: "Đóng",
            closeOnConfirm: false,
            closeOnCancel: false
        }, function (isConfirm) {
            if (isConfirm) {
                swal.close();
                $(obj).closest("li.img-si").remove();
            }
            else {
                swal.close();
            }
        });
    }
