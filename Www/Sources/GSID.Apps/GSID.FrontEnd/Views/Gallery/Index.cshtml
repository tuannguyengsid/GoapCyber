                    @if (Model.Images != null && Model.Images.Count > 0)
                    {
                        foreach (var item in Model.Images)
                        {
                            string libraryClass = "";
                            if (item.ImageLibraries != null)
                            {
                                foreach (var x in item.ImageLibraries)
                                {
                                    libraryClass += string.Format(" {0}", x.Id);
                                }
                            }
                            <div class="col-lg-3 col-sm-6 portfolio_item @libraryClass">
                                <div class="portfolio_img">
                                    <a href="@string.Format("{0}/{1}", httpStatic, item.ImageSrc)" class="img_popup"><img class="img_rounded" src="@string.Format("{0}/{1}", httpStatic, item.ImageSrc)"></a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
