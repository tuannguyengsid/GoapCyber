                    {
                        foreach (var item in Model.ImageLibraries)
                        {
                            <div data-filter=".@item.Id" class="work_portfolio_item">@item.NameVn</div>
                        }
                    }
                </div>
            </div>
            <div class="portfolio_gallery">
